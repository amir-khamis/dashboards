<form hideEdit="false" script="common_control.js, table_cell_highlighting.js, table_cell_highlighting1.js" stylesheet="shared.css, health-check.css, table_cell_highlighting.css" theme="light">
  <label>index cluster bundle analysis</label>
  <description>This view is intended to be loaded on the Monitoring Console inside the splunk_monitoring_console app</description>
  <fieldset autoRun="true" submitButton="false">
    <input type="dropdown" searchWhenChanged="true" token="group">
      <label>Index Cluster</label>
      <showClearButton>false</showClearButton>
      <search>
        <query>| `dmc_get_indexer_cluster_groups`</query>
      </search>
      <fieldForLabel>label</fieldForLabel>
      <fieldForValue>search_group</fieldForValue>
      <selectFirstChoice>true</selectFirstChoice>
    </input>
    <input type="time" token="time" searchWhenChanged="true">
      <label></label>
      <default>
        <earliest>-60m@m</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="span" searchWhenChanged="true">
      <label>span</label>
      <choice value="minspan=10s">auto</choice>
      <choice value="span=1m">1m</choice>
      <choice value="span=5m">5m</choice>
      <choice value="span=15m">15m</choice>
      <choice value="span=1h">1h</choice>
      <choice value="span=4h">4h</choice>
      <default>minspan=10s</default>
      <initialValue>minspan=10s</initialValue>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>cluster master info</title>
      <table>
        <search>
          <query>| rest /services/cluster/master/info splunk_server_group=dmc_group_cluster_master splunk_server_group="$group$"| table splunk_server active_bundle.bundle_path active_bundle.checksum active_bundle.timestamp apply_bundle_status.awaiting_bundle_status_from_peers apply_bundle_status.status last_dry_run_bundle.bundle_path last_dry_run_bundle.checksum last_dry_run_bundle.timestamp last_validated_bundle.bundle_path last_validated_bundle.checksum last_validated_bundle.is_valid_bundle last_validated_bundle.timestamp latest_bundle.bundle_path latest_bundle.checksum latest_bundle.timestamp maintenance_mode multisite previous_active_bundle.bundle_path previous_active_bundle.checksum previous_active_bundle.timestamp | convert ctime(*.timestamp) as *.timestamp| rename splunk_server as Instance</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">100</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="percentagesRow">false</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
        <drilldown>
          <set token="cmaster">$click.name$</set>
        </drilldown>
      </table>
      <html>
        <p>Click on instance name above to see more detail.</p>
      </html>
    </panel>
  </row>
  <row>
    <panel>
      <title>peer count by latest/active bundle id</title>
      <table>
        <title>In a normal scenario after a bundle push from the CM , all peers should have the same latest &amp; active bundle id</title>
        <search>
